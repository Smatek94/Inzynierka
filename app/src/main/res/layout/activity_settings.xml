<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.mateuszskolimowski.inzynierka.activities.routes_list.SettingsActivity">

    <RelativeLayout
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/add_event_to_calendar_checkbox" />

        <TextView
            android:text="Czy pokazywać dialog dodawania wydarzenia do kalendarza?"
            android:layout_width="match_parent"
            style="@style/TextViewStyle.Medium.Bold"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/add_event_to_calendar_checkbox"/>
    </RelativeLayout>

    <TextView
        android:text="Czas działania algorytmu"
        style="@style/TextViewStyle.Medium.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/seek_bar_value_textview"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <SeekBar
            android:layout_toLeftOf="@id/seek_bar_value_textview"
            android:layout_alignParentLeft="true"
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <Button
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/testing_button"
        style="@style/ButtonStyle.Available"
        android:text="Testowanie algorytmu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
